{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
        "resolveJsonModule": true,
		"strict": true,   /* enable all strict type-checking options */
		"esModuleInterop": true,
		"strictFunctionTypes": false, /* Disable strict function type checking */
		"skipLibCheck": true          /* Skip type checking for declaration files */
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}